<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.url.salle.eric.macia.bubblefy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bubblefy_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bubblefy_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controller.RecoveryEmail" />
        <activity android:name=".Controller.NewPassword" />
        <activity android:name=".Controller.RecoverKey" />
        <activity android:name=".Controller.SignUpActivity" />
        <activity android:name=".Controller.LoginActivity"></activity>
        <activity android:name=".Controller.MainActivity" />
    </application>

</manifest>