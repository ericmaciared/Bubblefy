<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Find anything you want"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/colorTextPrimary"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:textSize="@dimen/text_size_medium"
            android:id="@+id/search_text"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/colorTextPrimary"/>
        <Button
            android:id="@+id/search_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_medium"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/group_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:paddingTop="17dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:id="@+id/radio_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:textColor="@color/colorTextPrimary"
            android:text="Songs"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radio_playlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:textColor="@color/colorTextPrimary"
            android:text="Playlists"/>
        <RadioButton
            android:id="@+id/radio_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:textColor="@color/colorTextPrimary"
            android:text="Users"/>
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:layout_below="@+id/group_buttons"
        android:layout_centerHorizontal="true"/>


    <RelativeLayout
        android:id="@+id/playback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:background="@color/black">

            <ImageView
                android:id="@+id/image_section"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="#0000"
                android:layout_width="50dp" />

            <LinearLayout
                android:id="@+id/info_section"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#0000"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/track_title"
                    android:layout_width="wrap_content"
                    android:maxWidth = "189dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:singleLine="true"
                    android:text="Colores"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/track_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/open_sans_light"
                    android:text="J Balvin"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_smallmedium" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/play_pause"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#0000"
                android:src="@drawable/ic_play" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>